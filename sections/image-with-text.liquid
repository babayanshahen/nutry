<div class="page-width">
  <div class="section-header text-center bn-title-sec">
    <h4 class="h2">{{ section.settings.title }}</h4>
    <h5 class="bn-h5">{{section.settings.subtitle}}</h5>
  </div>
<div class="flex-contentImages">
{% if section.blocks.size > 0 %}
 {% for block in section.blocks %}

<div class="bn-image-withText">
<div class="image-content">
  {{block.settings.image  }}
</div>
<div class="text-content-bn">
  <div> {{block.settings.text}}</div>
</div>

</div>
{% endfor %}
{% endif %}
</div>
</div>
{% schema %}
{
"name": "Icons with text",
"class":"index-section",
"settings": [
  {
    "type": "text",
    "id": "title",
    "label": "Title"
  },
  {
    "type": "text",
    "id": "subtitle",
    "label": "Subtitle"
  }
],
"blocks": [
  {
  "type":"html",
  "name":"Badges",
  "settings":[
  {
    "type": "html",
    "id":"image",
    "label": "image"
  },
  {
    "type": "richtext",
    "id": "text",
    "label": "text"
  }
]
}],
"presets" : [
{
"name" : "Icons",
"category" : "Call"
}
]
}
{% endschema %}